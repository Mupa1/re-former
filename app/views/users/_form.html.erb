<%= form_for @user do |f| %>
  
  <p>
    <%= f.label :username, 'Your Username Here:' %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email, placeholder: "me@example.com" %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>